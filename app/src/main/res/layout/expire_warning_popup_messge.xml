<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Product Expiry Alert  "
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffff0000"
        android:textSize="30dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/expire">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Product Name     "
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="#ff151cff"
            android:layout_marginBottom="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/pname"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginBottom="@dimen/activity_horizontal_margin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Expired Date"
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="#ff1519ff"
            android:layout_marginBottom="@dimen/activity_horizontal_margin" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:weightSum="1">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/exdate"
                android:layout_weight="0.04" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView4"
                android:layout_row="2"
                android:layout_column="0"
                android:text="Shelf Stock  "
                android:textColor="#ff1519ff"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="0.02" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stock"
                android:layout_weight="0.23" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Batch  "
                android:id="@+id/textView5"
                android:layout_row="3"
                android:layout_column="0"
                android:textColor="#ff1519ff"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="0.02" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/batch"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginBottom="@dimen/activity_horizontal_margin" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Product Code "
                android:id="@+id/textView6"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="#ff1519ff"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="0.03" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/pcode"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_marginBottom="@dimen/activity_horizontal_margin" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:id="@+id/textView7"
            android:layout_row="2"
            android:layout_column="0"
            android:textSize="20dp"
            android:textColor="#ff0b18ff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/cusName"
                android:layout_weight="0.39"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Number"
                android:id="@+id/textView8"
                android:layout_weight="0.02"
                android:textColor="#ff0b18ff"
                android:textSize="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contactnumber"
                android:layout_weight="0.29" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_marginLeft="500dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imform to Outlet"
                android:id="@+id/ImformtoOutlet" />
        </LinearLayout>

    </GridLayout>

</LinearLayout>