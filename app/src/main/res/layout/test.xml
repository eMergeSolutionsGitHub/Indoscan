<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="50dp" android:layout_marginTop="10dp"
        android:background="@drawable/layout_border"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_principle"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spPrinciple"
            android:layout_weight="1" />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/txt_category"
            android:layout_marginLeft="20dp"
            android:textSize="18dp"
            android:textStyle="bold"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spCategory"
            android:layout_weight="1" />

    </LinearLayout>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/tblheader"
        android:showDividers="middle"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"></TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/scrollView"

        android:scrollbarFadeDuration="0"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tblTest"
            android:showDividers="middle">

        </TableLayout>



    </ScrollView>
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/layout_border"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Total Value : 0"
            android:id="@+id/textViewtot" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Issue"
            android:id="@+id/checkBox_freeIssues"
            android:layout_marginLeft="100dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Next"
            android:id="@+id/btnNextToPayment"

            android:layout_marginLeft="350dp"
            />

    </LinearLayout>
</LinearLayout>